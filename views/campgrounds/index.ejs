<% layout('/layouts/boilerplate') %>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Campgrounds</h1>
    <% for (let camp of campground ){ %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(camp.images.length) {%>
                <img class="img-fluid" alt="" src="<%=camp.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/dstbv1n75/image/upload/v1621010479/YelpCamp/lpfy63pkwncxajo2bjje.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= camp.title %>
                    </h5>
                    <p class="card-text">
                        <%= camp.description  %>
                    </p>
                    <p class="card-text">
                        <small class="text-muted">
                            <%= camp.location %>
                        </small>
                    </p>
                    <a href="/campgrounds/<%= camp._id %>/" class="btn btn-primary">View <%= camp.title  %> </a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = { features: <%- JSON.stringify(campground) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>